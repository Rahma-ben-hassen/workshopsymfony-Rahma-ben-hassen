<img src="{{ asset('img/student.jpg') }}" alt="student"> 
<h1>la liste des formations de la classe {{classe}} dans la salle {{salle}}</h1>
{% if tab_formations is empty %}
<h6 style="color: coral">Pas de formations</h6>
{% else %}
{% for i in tab_formations %}
{% if i.Description == "theorique"%}
    ref: {{i.ref}} titre: {{i.Titre|upper}} description: {{i.Description}} nb participants
    {{i.nb_participants}}
    Participer :
    {% if i.nb_participants == 0 %}<a href="{{ path('app_reservation') }}">Participer</a>
    {% else %}complet
    {% endif %}
    <br>
    {% endif %}
{% endfor %}
{% endif %}
<h5 style="color: blue">Nbr de formations: {{ tab_formations|length }}</h5>
{% set x =10 %}
x={{ x }} <br>

{% set max=0 %} 
{% set titre="" %}
{% for i in tab_formations %}
{% if i.nb_participants>max %}
{% set max =i.nb_participants %}
{% set titre=i.Titre %}
{% endif %}
{% endfor %}
titre ={{titre}} <br>

{% set somme=0 %}
{% for i in tab_formations %}
{% set somme = somme+i.nb_participants %}
{% endfor %}
somme = {{somme}}